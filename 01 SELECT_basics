-- 1. Population of Germany 
SELECT
    w.name,
    w.population
FROM
    world AS w
WHERE
    w.name = 'Germany';

-- 2. Population of Scandinavian countries
SELECT
    w.name,
    w.population
FROM
    world AS w
WHERE
    w.name IN ('Sweden', 'Norway', 'Denmark')
ORDER BY
    w.name;

-- 3. Countries with area between 200,000 and 250,000 kmÂ² 
SELECT
    w.name,
    w.area
FROM
    world AS w
WHERE
    w.area BETWEEN 200000 AND 250000
ORDER BY
    w.area;
